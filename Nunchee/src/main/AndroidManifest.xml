<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartboxtv.nunchee" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:name=".fragments.NUNCHEE"
        android:allowBackup="true"
        android:icon="@drawable/icon_oficia_2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.facebook.LoginActivity" />
        <activity
            android:name="com.smartboxtv.nunchee.activities.LoginActivity"
            android:label="Nunchee"
            android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartboxtv.nunchee.activities.RecommendedActivity"
            android:label="@string/empty"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.smartboxtv.nunchee.activities.ProgramationActivity"
            android:icon="@android:color/transparent"
            android:label="@string/empty"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.smartboxtv.nunchee.activities.PreviewActivity"
            android:label="@string/empty"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.smartboxtv.nunchee.activities.SecondPreviewActivity"
            android:label="@string/empty"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
    </application>

</manifest>
