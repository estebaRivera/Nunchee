<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/pop_corn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:clickable="true"
    android:longClickable="true"
    android:focusable="false"
    android:focusableInTouchMode="false">


    <ImageView
        android:id="@+id/pop_corn_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loading"
        android:clickable="true"
        android:longClickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:background="@drawable/pop_corn"
        android:layout_width="62dp"
        android:layout_height="93dp"
        android:id="@+id/pop_corn_centro"
        android:layout_marginTop="11dp"
        android:clickable="false"
        android:longClickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignTop="@id/pop_corn_loading"
        android:layout_alignLeft="@+id/pop_corn_loading"
        android:layout_marginLeft="32dp" />

</RelativeLayout>