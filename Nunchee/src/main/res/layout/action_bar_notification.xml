<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:background="#55000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginRight="130dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/pestana_up"
            android:layout_above="@+id/wrapper"
            android:layout_marginBottom="1dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <RelativeLayout
            android:id="@+id/wrapper"
            android:layout_marginTop="10dp"
            android:layout_marginRight="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="325dp"
            android:layout_height="270dp">

            <ImageView
                android:background="@drawable/bg_msj"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/no_notification"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/no_notification"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="130dp"
                    android:layout_height="55dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/container_message"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:scrollbars="none"
                    android:fadingEdge="none"
                    android:fadingEdgeLength="0dp"
                    android:overScrollMode="never"
                    android:smoothScrollbar="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/list_notifications"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </LinearLayout>
                    </ScrollView>
            </RelativeLayout>

        </RelativeLayout>

</RelativeLayout>