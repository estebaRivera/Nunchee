<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#c13b56"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <RelativeLayout
        android:id="@+id/container_polls"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trivia"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:textSize="18sp"
            android:id="@+id/accion_nombre" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="12dp"
            android:text="@string/empty"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_below="@+id/accion_nombre"
            android:id="@+id/accion_pregunta" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="12dp"
            android:text="@string/empty"
            android:textColor="#99FFFFFF"
            android:textSize="11sp"
            android:layout_below="@+id/accion_pregunta"
            android:id="@+id/accion_detalle" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/no_poll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_polls"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_not_small"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:id="@+id/txt_polls"
            android:layout_toRightOf="@+id/img_polls"
            android:layout_marginLeft="10dp"
            android:textColor="#55FFFFFF"
            android:layout_centerVertical="true"
            android:text="Oops! lo sentimos,"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_polls_2"
            android:layout_alignLeft="@+id/txt_polls"
            android:layout_below="@id/txt_polls"
            android:textColor="#55FFFFFF"
            android:text="aÃºn no hay encuesta para este programa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>