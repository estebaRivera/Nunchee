<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:background="#2DBBBC"
    android:orientation="horizontal"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:layout_gravity="fill_horizontal"
    android:gravity="left"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <!-- Menú -->
    <ImageButton
        android:layout_marginLeft="20dp"
        android:src="@drawable/btn_menu_nav"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:id="@+id/item_menu"/>

    <!-- Buscar -->
    <EditText
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@+id/item_menu"
        android:background="?attr/actionBarItemBackground"
        android:textColor="#55000000"
        android:layout_width="180dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"

        android:layout_height="42dp"
        android:focusable="true"
        android:hint="Buscar"
        android:id="@+id/item_buscar"/>

    <ImageView
        android:id="@+id/icon_search"
        android:layout_height="50dp"
        android:layout_width="20dp"
        android:background="@drawable/icon_buscar"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_buscar"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:layout_height="26dp"
        android:layout_width="80dp"
        android:background="@drawable/logo"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_mensajes"
        android:layout_marginRight="15dp" />

    <!-- Mensajes -->
    <ImageButton
        android:src="@drawable/icon_msj"
        android:layout_toLeftOf="@+id/item_notificaciones"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_height="32dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:id="@+id/item_mensajes"
        android:layout_marginRight="16dp" />

    <!-- Notificaciones -->
    <ImageButton
        android:src="@drawable/icon_notificacion2"
        android:layout_toLeftOf="@+id/item_configuracion"
        android:background="?attr/actionBarItemBackground"
        android:layout_marginRight="75dp"
        android:layout_centerVertical="true"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:scaleType="centerCrop"
        android:id="@+id/item_notificaciones"/>

    <!-- Perfil -->
    <ImageView
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_toLeftOf="@+id/item_configuracion"
        android:src="@drawable/icon_nuevo_perfil_"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="41dp"
        />

    <ImageView
        android:id="@+id/foto_perfil_actionbar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        android:layout_toLeftOf="@+id/item_configuracion"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="70dp" />

    <!-- Configuración -->
    <ImageButton
        android:src="@drawable/icon_config"
        android:layout_alignParentRight="true"
        android:background="?attr/actionBarItemBackground"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="38dp"
        android:layout_marginLeft="5dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_marginRight="15dp"
        android:id="@+id/item_configuracion"/>

</RelativeLayout>