<?xml version="1.0" encoding="utf-8"?>


    <!--- Cabeza-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="495dp"
        android:id="@+id/preview_programa"
        android:layout_height="210dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/preview_cabeza_fondo"
            android:background="@drawable/backdrop_placeholder"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/preview_cabeza_foto"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/preview_fondo_detalle"
            android:background="#AA000000"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/linearLayout2" />

        <TextView
            android:id="@+id/preview_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:text="@string/empty"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_alignTop="@+id/preview_fondo_detalle"
            android:layout_alignParentLeft="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/preview_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="12dp"
            android:text="@string/empty"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:layout_below="@+id/preview_nombre"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/preview_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/empty"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:layout_below="@+id/preview_hora"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:layout_above="@+id/preview_fondo_detalle"
            android:layout_alignParentRight="true"
            android:id="@+id/linearLayout2">

            <RelativeLayout
                android:layout_height="60dp"
                android:layout_width="120dp"
                android:background="#5CC4C5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:text="@string/empty"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:id="@+id/preview_nombre_canal"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@android:color/white"
                android:id="@+id/preview_foto_canal" />

        </LinearLayout>

        <ImageView
            android:layout_width="84dp"
            android:layout_height="86dp"
            android:background="@drawable/favorito_fw"
            android:id="@+id/preview_image_favorito"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
