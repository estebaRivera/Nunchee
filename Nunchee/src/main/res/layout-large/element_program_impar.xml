<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="#1B1B1B"
    android:clipChildren="false"
    android:id="@+id/container_program">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:clickable="false"
        android:focusable="false"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="15sp"
        android:text=""
        android:layout_marginTop="26dp"
        android:layout_marginLeft="25dp"
        android:alpha="0.5"
        android:clickable="false"
        android:focusable="false"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text=""
        android:textSize="12sp"
        android:alpha="0.5"
        android:clickable="false"
        android:focusable="false"
        android:maxLines="1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="47dp"
        />


    <!--ImageView
        android:id="@+id/margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/separador_canal"

        android:background="@drawable/separador_titulos_"

        /-->

    <ImageView
        android:id="@+id/margin_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/separador_titulos_"
        android:layout_marginLeft="1dp" />

    <ImageView
        android:id="@+id/img_favorite"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/txt_name_repeated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="15sp"
        android:text=" "
        android:layout_marginTop="26dp"
        android:layout_marginLeft="105dp"
        android:alpha="0.3"
        android:clickable="false"
        android:focusable="false"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

</FrameLayout>